<!DOCTYPE html>
<html>
  <head>
    {% include '/includes/head.html.twig' %}
    <title>Pokedex</title>
  </head>
  <body>
    <!--Navbar-->
        <nav class="navbar navbar-default navbar-fixed-top" toll="navigation">
          <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand" href="#">
                <img alt="Brand" src="/images/pokemonTitle.png" class="pokelogo">
              </a>
            </div>
            <div>
              <ul class = "nav navbar-nav navbar-right extra-link">
                <li><a href="/types">Types</a></li>
                <li><a href="/pokemon_all">Pokemon</a></li>
              </ul>
            </div>
          </div>
        </nav>
        <!-- End Navbar -->
    <div class="container">
    {% if types|length  %}
    {% set typesPerColumn = (types|length / 3)|round(0, 'ceil') %}
    {% for type in types %}
        {% if typesPerColumn == 1 or loop.index % typesPerColumn == 1 %}
            <div class="col-md-4">
                <ul>
        {% endif %}
            <h1 class="type-item"><a href="/type/{{ type.getId }}">{{ type.getName }}</a></h1>
            <li class="type-item"><span class="bold">Strong Against:</span> {{ type.getStrength }}</li>
            <li class="type-item"><span class="bold">Weak Against:</span> {{ type.getWeakness }}</li>
        {% if loop.last or loop.index % typesPerColumn == 0 %}
                </ul>
            </div>
        {% endif %}
    {% endfor %}
    {% endif %}
    </div>
  </body>
</html>
