<!DOCTYPE html>
<html>
  <head>
    {% include '/includes/head.html.twig' %}
    <title></title>
  </head>
  <body>
    <!--Navbar-->
    <nav class="navbar navbar-default navbar-fixed-top" toll="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
            <img alt="Brand" src="/images/pokemonTitle.png" class="pokelogo">
          </a>
        </div>
        <div>
          <ul class = "nav navbar-nav navbar-right extra-link">
            <li><a href="/types">Types</a></li>
            <li><a href="/pokemon_all">Pokemon</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->
    <div class="container">
    <!-- Carousel -->
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="/images/banner_all.png" alt="Pikachu">
    </div>
    <div class="item">
      <img src="/images/pokemon/bulbasaur.png" alt="Bulbasaur">
    </div>
    <div class="item">
      <img src="/images/pokemon/squirtle.png" alt="Squirtle">
    </div>
    <div class="item">
      <img src="/images/pokemon/charmander.png" alt="Charmander">
    </div>
</div>

<!-- End Carousel -->
      <h1 class="catch">Gotta Catch Them All?</h1>
      <div class="row">
        <!-- Registration Form -->
        <div class="col col-md-6">
          <div class="form">
            <h3>Register a New User Here</h3>
            <form name="registration" action="/register" method="post">
              <input type="text" name="username" placeholder="Username/Email" required /><br><br>
              <input type="password" name="password" placeholder="Password" required /><br><br>
              <input type="submit" name="submit" value="Register"/>
            </form><br>
            {% if alert_register %}
                <div class="alert alert-danger" role="alert">
                  {{ failed_register }}
                </div>
            {% endif %}
          </div>
        </div>
        <!-- End Registration Form -->
        <!-- Login Form -->
        <div class="col col-md-6">
          <div class="form">
            <h3>Existing User</h3>
            <form name="login" action="/login" method="post">
              <input type="text" name="username" placeholder="Username/Email" required /><br><br>
              <input type="password" name="password" placeholder="Password" required /><br><br>
              <input type="submit" name="submit" value="Sign In" />
            </form><br>
            {% if alert_login %}
                <div class="alert alert-danger" role="alert">
                  {{ failed_login }}
                </div>
            {% endif %}
          </div>
        </div>
        <!-- End Login Form -->
      </div>
    </div>
  </body>
</html>
