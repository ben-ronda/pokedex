<!DOCTYPE html>
<html>
  <head>
    {% include '/includes/head.html.twig' %}
    <title>Pokedex</title>
  </head>
  <body>
    {% if pokemons is not empty %}
      <ul>
        {% for pokemon in pokemons %}
          <li>{{ pokemon.getName }}</li>
          {% for type in pokemon.getTypes %}
          <li>{{ type.getName }}</li>
          <li>Weak against: {{ type.getWeakness }}</li>
          <li>Strong against: {{ type.getStrength }}</li>
          {% endfor %}
          <ul>
            <li>{{ pokemon.getDexNumber }}</li>
            <li>{{ pokemon.getHeightFeet }} ft {{ pokemon.HeightInches}} inches</li>
            <li>{{ pokemon.getWeight }} pounds</li>
            <img class="pokemon" src="{{ pokemon.getImagePath }}"/>
          </ul>
        {% endfor %}
      </ul>
    {% endif %}
  </body>
</html>
